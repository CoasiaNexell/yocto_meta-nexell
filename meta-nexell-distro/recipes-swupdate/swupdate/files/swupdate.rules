# swupdate with USB cards
ACTION=="add", KERNEL=="sd*", SUBSYSTEM=="block", ENV{DEVTYPE}=="partition", RUN+="/etc/init.d/swupdate-service start %k"
ACTION=="remove", KERNEL=="sd*", SUBSYSTEM=="block", ENV{DEVTYPE}=="partition", RUN+="/etc/init.d/swupdate-service stop %k"

# swupdate with SD [mmcblk1pN] cards
ACTION=="add", KERNEL=="mmcblk1p[0-9]", SUBSYSTEM=="block", ATTRS{type}!="MMC", RUN+="/etc/init.d/swupdate-service start %k"
ACTION=="remove", KERNEL=="mmcblk1p[0-9]", SUBSYSTEM=="block", RUN+="/etc/init.d/swupdate-service stop %k"